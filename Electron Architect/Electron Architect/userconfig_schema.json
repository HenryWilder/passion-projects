{
  "$schema": "https://github.com/HenryWilder/passion-projects/releases/latest/download/userconfig_schema.json",
  "$id": "https://github.com/HenryWilder/passion-projects/releases/latest/download/userconfig_schema.json",

  "title": "Electron Architect user config schema",
  "type": "object",
  "properties": {
    "background_color": {
      "type": "object",
      "properties": {
        "r": { "type": "byte" },
        "g": { "type": "byte" },
        "b": { "type": "byte" },
        "a": {
          "type": "byte",
          "default": 255
        }
      },
      "required": ["r", "g", "b"]
    },
    "bp_menu_lod": {
      "type": "byte",
      "default": 0
    },
    "clipboard_preview_lod": {
      "type": "byte",
      "default": 0
    },
    "paste_preview_lod": {
      "type": "byte",
      "default": 0
    }
  }
}